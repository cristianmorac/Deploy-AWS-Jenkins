pipeline {
    agent any

    tools {
    nodejs 'Node-app'
}

    environment {
        SONAR_HOST_URL = 'http://localhost:9000'
    }

    stages {
        stage('checkout'){
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('app-front'){
                    sh 'npm install'
                }
            }
        }

        stage('Test') {
            steps {
                dir('app-front') {
                    sh 'npm test -- --watchAll=false'
                }
            }
        }
    }
}